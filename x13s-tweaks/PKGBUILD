# Maintainer: Alex R <alex@ironrobin.net>

pkgname=x13s-tweaks
pkgver=0.1
pkgrel=0
pkgdesc="Tweaks for ThinkPad X13s (Snapdragon 8cx Gen 3)"
arch=('any')
install=${pkgname}.install
source=('x13s.js')
package() {
    # Workaround for YouTube evil
    # https://bugzilla.mozilla.org/show_bug.cgi?id=1869521
    mkdir -p "$pkgdir"
    install -Dm644 x13s.js "$pkgdir"/usr/lib/firefox/defaults/pref/x13s.js
}
md5sums=('d346a85c19cfe3a9ba3df7ebccff41a8')
